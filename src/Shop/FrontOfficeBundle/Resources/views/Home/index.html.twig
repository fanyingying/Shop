{% extends "ShopFrontOfficeBundle::layout.html.twig" %}

{% block shop_content_body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Cat√©gorie</p>
                <div class="list-group">
