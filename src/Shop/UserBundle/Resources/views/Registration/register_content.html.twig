{% trans_default_domain 'FOSUserBundle' %}

{% if form.vars.valid == false %}
    <div class="alert alert-danger" role="alert">
        {{ form_errors(form.username) }}
        {{ form_errors(form.email) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>
{% endif %}

<form class="form-horizontal fos_user_registration_register" role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
    {#{{ form_widget(form) }}#}
    
    <div class="form-group">
        {{ form_label(form.username, null, { 'label_attr': {'class': 'control-label col-sm-4'} }) }}
        <div class="col-sm-8">
            {{ form_widget(form.username,{'attr':{'class':'form-control'} }) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(form.email, null, { 'label_attr': {'class': 'control-label col-sm-4'} }) }}
        <div class="col-sm-8">
            {{ form_widget(form.email,{'attr':{'class':'form-control'} }) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(form.plainPassword.first, null, { 'label_attr': {'class': 'control-label col-sm-4'} }) }}
        <div class="col-sm-8">
            {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control'} }) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(form.plainPassword.second, null, { 'label_attr': {'class': 'control-label col-sm-4'} }) }}
        <div class="col-sm-8">
            {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control'} }) }}
        </div>
    </div>
        
    {{ form_rest(form) }}
    
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" id="_submit" name="_submit" class="btn btn-default">{{ 'registration.submit'|trans }}</button>
        </div>
    </div>
</form>
