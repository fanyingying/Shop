{% extends "ShopFrontOfficeBundle::layout.html.twig" %}

{% block shop_content_body %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-3 col-md-offset-4 col-sm-6 col-md-4 alert alert-info" role="alert">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-1 col-md-offset-2 col-sm-10 col-md-8 well">
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}